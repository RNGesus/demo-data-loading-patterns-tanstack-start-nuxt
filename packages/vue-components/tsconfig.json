{
  "extends": "@vue/tsconfig/tsconfig.lib.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": [
      "vite/client"
    ],
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "esModuleInterop": true,
    "composite": true,
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["./src/*"]
    },
    "skipLibCheck": true
  },
  "include": ["**/*d.ts", "**/*.ts", "src/**/*.d.ts", "src/**/*.md", "src/**/*.tsx", "src/**/*.vue"]
}
